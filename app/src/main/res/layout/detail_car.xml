<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foto_detail"
                android:layout_width="389dp"
                android:layout_height="118dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipe_detail"
                android:layout_below="@+id/foto_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Tipe"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merek_detail"
                android:layout_below="@+id/tipe_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Merek"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plate_detail"
                android:layout_below="@+id/merek_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Plate"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tahun_detail"
                android:layout_below="@+id/plate_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Tahun"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/harga_detail"
                android:layout_below="@+id/tahun_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Harga"
                android:textSize="21dp"
                android:textStyle="bold" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="Pesan"
                android:layout_marginTop="50dp"/>



        </LinearLayout>
    </ScrollView>
